{% extends 'base.html.twig' %}

{% block title %}Game Result{% endblock %}

{% block body %}
    <h1>Game Result</h1>
    <h2>Your Hand (Value: {{ playerHand.value }})</h2>
    <div class="card-container">
        {% for card in playerHand.cards %}
            <div class="card">
                {{ card }}
            </div>
        {% endfor %}
    </div>

    <h2>Bank's Hand (Value: {{ bankHand.value }})</h2>
    <div class="card-container">
        {% for card in bankHand.cards %}
            <div class="card">
                {{ card }}
            </div>
        {% endfor %}
    </div>

    <h2>{{ result }}</h2>
    <div class="btn-container">
        <a href="{{ path('game_start') }}" class="btn btn-primary">Start New Game</a>
    </div>
{% endblock %}
